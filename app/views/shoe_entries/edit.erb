
<div class="container">


  <form class="" action="/shoe_entries/<%=@shoe_entry.id%>" method="post">
    <font color="red"><h1>Edit Entry Here: </h1></font>
    <font color="red"><h3>Note: All fields optional <em>except</em> "Name".</h3></font>
    <!-- name -->
    <div class="form-group">
      <input type="hidden" name="_method" value="patch">
      <b><label for="name">Name: </label></b>
    <input type="text" name="name"  value="<%=@shoe_entry.name %>"class="form-control" required>
    </div>

    <!-- brand  -->
   <div class="form-group">
       <input type="hidden" name="_method" value="patch">
     <b><label for="brand">Brand:</label></b>
     <input type="text" name="brand" value="<%=@shoe_entry.brand %>" class="form-control">
   </div>

   <!-- image URL  -->
   <div class="form-group">
       <input type="hidden" name="_method" value="patch">
    <b><label for="url">Image URL:</label></b>
    <input type="text" name="url" value="<%=@shoe_entry.url %>"class="form-control">
   </div>


   <!-- Style -->
    <div class="form-group">
        <input type="hidden" name="_method" value="patch">
      <b><label for="style">Style:</label></b>
      <input type="text" name="style" value="<%=@shoe_entry.style %>"class="form-control">
    </div>
      <input type="submit" name="" value="Edit Entry">
  </form>
</div>

  </form>
  <br><br><br>
  <form method="post" action="/shoe_entries/<%= @shoe_entry.id %>/delete">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete Shoe Entry">
  </form>
